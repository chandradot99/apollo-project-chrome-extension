{
  "name": "chrome-extension-react-scaffold",
  "version": "1.0.0",
  "description": "Chrome extension scaffold with React, TypeScript, and Tailwind CSS - supports both popup and side panel modes",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch --env MODE=popup",
    "dev:popup": "webpack --mode development --watch --env MODE=popup",
    "dev:sidepanel": "webpack --mode development --watch --env MODE=sidepanel",
    "build": "webpack --mode production --env MODE=popup",
    "build:popup": "webpack --mode production --env MODE=popup",
    "build:sidepanel": "webpack --mode production --env MODE=sidepanel",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "zip": "npm run clean && npm run build && cd dist && zip -r ../extension.zip ."
  },
  "dependencies": {
    "firebase": "^11.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
